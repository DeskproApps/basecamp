{
  "name": "@deskpro-apps/basecamp",
  "title": "Basecamp",
  "description": "Link your Basecamp cards to your Deskpro tickets to streamline communication with users by making them easy to view and update.",
  "version": "0.0.5",
  "scope": "agent",
  "isSingleInstall": false,
  "hasDevMode": true,
  "targets": [{ "target": "ticket_sidebar", "entrypoint": "index.html" }],
  "entityAssociations": {
    "linkedBasecampCard": {
      "title": "Linked Basecamp Card",
      "entity": "ticket",
      "type": "external_id"
    }
  },
  "settings": {
    "client_id": {
      "title": "Client ID",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": false,
      "order": 10
    },
    "client_secret": {
      "title": "Client Secret",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": true,
      "order": 20
    },
    "callback_url": {
      "title": "Callback URL",
      "type": "app_embedded",
      "options": { "entrypoint": "#/admin/callback" },
      "isRequired": false,
      "isBackendOnly": true,
      "order": 30
    }
  },
  "proxy": {
    "whitelist": [
      {
        "url": "https://3.basecampapi.com/.*",
        "methods": ["GET", "POST"],
        "timeout": 20
      },
      {
        "url": "https://launchpad.37signals.com/.*",
        "methods": ["POST"],
        "timeout": 20
      }
    ]
  }
}
